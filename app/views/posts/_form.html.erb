<%= form_for @post, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :description %>
  </div>

  <div class="form-group">
    <%= f.text_field :description %>
  </div>

  <br>
  <div class="form-group">
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </div>

  <br>
  <div class="text-center">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>
