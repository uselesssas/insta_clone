<div class="user-edit-page">
  <div class="actions">
    <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical">
      <%= link_to 'Редактировать профиль', edit_user_path(current_user) , class: 'nav-link active' %>
      <%= link_to 'Изменить электронную почту или пароль', edit_user_registration_path , class: 'nav-link' %>
      <%= link_to 'Выход', destroy_user_session_path, data: {turbo_method: :delete}, class: 'nav-link-danger' %>
    </div>
  </div>

  <div class="details tab-content">
    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
      <%= form_with model: current_user, local: true, html: {class: "form-horizontal form-edit-user"} do |f| %>
        <div class="form-group row">
          <div class="col-sm-3 col-form-label">
            <%= image_tag avatar_url(current_user) %>
          </div>
          <div class="col-sm-9">
            <p class="username"><%= current_user.username %></p>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Аватар', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.file_field :avatar, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Имя', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :real_name, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Псевдоним', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :username, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Веб-сайт', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :website, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'О себе', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_area :bio, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Телефон', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row">
          <%= f.label 'Пол', class: 'col-sm-3 col-form-label' %>
          <div class="col-sm-9">
            <%= f.text_field :gender, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="form-group row col-sm-3">
          <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
